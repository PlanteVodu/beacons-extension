{
  "manifest_version": 2,
  "name": "Beacons",
  "version": "1.0",
  "description": "A button to add/remove bookmarks from Beacons",
  "icons": {
    "24": "icons/icon-beacon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-empty.png",
    "default_title": "Beacons"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
