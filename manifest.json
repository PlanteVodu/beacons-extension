{
  "manifest_version": 2,
  "name": "Beacons",
  "version": "1.0.2",
  "description": "A button to add/remove bookmarks from Beacons",
  "icons": {
    "32": "icons/icon-added.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-absent.png",
    "default_title": "Beacons",
    "default_popup": "popup/choose_location.html"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
